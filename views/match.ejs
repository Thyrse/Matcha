<%- include('head'); %>
<div class="container row mx-auto d-flex justify-content-center my-4"> 
  <% if(data.record.length > 0) { for (var i=0, n=data.record.length; i < n; i++) { %>
    <div class="col-9 col-lg-5 col-xl-4 col-sm-9 col-md-7 p-2 border m-2 card-user rounded">
      <div class="card-display">
        <div class="text-center home-card">
            <img class="card-slide img-thumbnail fade show" src="pictures/<%=data.record[i].image_name %>" alt="Profile picture">
        </div>
        <div class="d-flex justify-content-between my-2 secondary-info">
            <span><%= data.record[i].birthday %></span>
            <div class="d-flex align-items-center">
              <span class="ml-2"><strong><%= data.record[i].first_name %></strong></span>
            </div>
            <% if(data.distance != null) { %>
              <span><%= data.distance %>km</span>
            <% } %>
        </div>
        <div class="d-flex flex-column card-bottom">
          <div class="d-flex justify-content-around">
            <a href="/chat?room=<%= data.record[i].id_match %>" class="btn btn-matcha rounded">Chat</a>
            <a href="/profile?user=<%= data.record[i].username %>" class="btn btn-primary rounded">Profile</a>
            <form action="" method="post">
                <input type="hidden" value="<%= data.record[i].id_match %>" name="match_id">
                <input type="hidden" value="<%= data.record[i].id %>" name="profile_id">
                <button class="btn btn-danger" type="submit" onclick="nomatch(this)">Delete</button>
            </form>
          </div>
          <div class="secondary-info">
            <span>Last connection: <%= data.record[i].last_login %></span>
          </div>
        </div>
      </div>
    </div>
  <% } } else { %>
    <div class="col-9 col-lg-5 col-xl-4 col-sm-9 col-md-7 p-2 text-center">
      <p>You dont have any match yet.</p>
    </div>
    <% } %>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<%- include('footer'); %>
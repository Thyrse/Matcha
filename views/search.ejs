<%- include('head'); %>
<div class="container row mx-auto d-flex justify-content-center my-4 main-content-home">
  <div class="col-10 col-sm-12 col-md-8 col-lg-6 shadow py-3 my-2 rounded home-sort">
    <div class="row justify-content-center">
      <form class="col-8" name="submit" method="post">
        <div class="form-group ">
          <p class="text-center">Age</p>
          <div class="form_div">
            <input class="form_input" type="number" id="age_min" name="age_min" value="18" min="18" max="80">
            <label class="form_label" for="age_min"><span class="label-name">min:</span></label>
          </div>
          <div class="form_div">
            <input class="form_input" type="number" id="age_max" name="age_max" value="80"min="18" max="80">
            <label class="form_label" for="age_max"><span class="label-name">max:</span></label>
          </div>
        </div>
        <div class="form-group ">
          <p class="text-center">Popularity rate</p>
          <div class="form_div">
            <input class="form_input" type="number" id="pop_min" name="pop_min" value="0" min="0" max="100">
            <label class="form_label" for="pop_min"><span class="label-name">min:</span></label>
          </div>
          <div class="form_div">
            <input class="form_input" type="number" id="pop_max" name="pop_max" value="100" min="0" max="100">
            <label class="form_label" for="pop_max"><span class="label-name">max:</span></label>
          </div>
        </div>
        <div class="form-group ">
          <label for="dist">Distance (km)</label>
          <input type="range" id="dist" name="dist" value="100" min="5" max="500" oninput="distOutput.value = dist.value">
          <output class="d-flex justify-content-center" name="ageOutputName" id="distOutput">100</output>
        </div>
        <div class="">
          <p class="text-center">Tag</p>
          <div class="row justify-content-center">
            <div class="col-5 col-md-12">
              <input type="checkbox" name="vegan">
              <label for="vegan">Vegan</label>
            </div>
            <div class="col-5 col-md-12">
              <input type="checkbox" name="fitness">
              <label for="fitness">Fitness</label>
            </div>
            <div class="col-5 col-md-12">
              <input type="checkbox" name="netflix">
              <label for="netflix">Netflix</label>
            </div>
            <div class="col-5 col-md-12">
              <input type="checkbox" name="party">
              <label for="party">Party</label>
            </div>
            <div class="col-5 col-md-12">
              <input type="checkbox" name="nature">
              <label for="nature">Nature</label>
            </div>
          </div>
        </div>
        <div class="col-sm-12 text-center mt-2">
              <button class="btn btn-sm px-4 btn-matcha">Search</button>
        </div>
      </form>
    </div>
  </div>
</div>
  
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
<%- include('footer'); %>